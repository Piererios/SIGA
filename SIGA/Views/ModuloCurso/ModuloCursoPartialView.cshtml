
<div id="ModuloCursoViewContainer">

    <div class="row viewTitle marginBottomp10px">
        <div class="col-lg-12 pull-left">
            <button id="btnNewModuloCurso" type="button" class="btn btn-success" onclick="loadCreateEditModuloCursoView()"><i class="fa fa-plus"></i> Nuevo Modulo</button>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body filtrosContainer">
            <div class="row">
                <div class="col-lg-9">
                    <div class="row">
                        <div class="col-lg-3  col-md-3">
                            <div class="form-group">
                                <label for="txtModuloNombre">Modulo</label>
                                <input type="text" class="form-control" id="txtModuloNombre" name="txtModuloNombre" placeholder="Nombre del Modulo">
                                @*<input type="text" class="form-control" id="txtPrimerNombre" name="txtPrimerNombre" placeholder="Nombre" data-bind="textInput: usuarioVM.txtPrimerNombre">*@
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3">
                            <div class="form-group">
                                <label for="txtModuloCurso">Curso</label>
                                <input type="text" class="form-control" id="txtModuloCurso" name="txtModuloCurso" placeholder="Curso del Modulo">
                                @*<input type="text" class="form-control" id="txtApellidoPaterno" name="txtApellidoPaterno" placeholder="Apellido Paterno" data-bind="textInput: usuarioVM.txtApellidoPaterno">*@
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3">
                            <div class="form-group">
                                <label for="cboModuloNivel">Nivel</label>
                                <select class="form-control" id="cboModuloNivel" name="cboModuloNivel">
                                    <option>Todos</option>
                                    <option>Basico</option>
                                    <option>Intermedio</option>
                                    <option>Avanzado</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3">
                            <div class="form-group">
                                <label for="cboModuloCategoria">Categoria</label>
                                <select class="form-control" id="cboModuloCategoria" name="cboModuloCategoria">
                                    <option>Todos</option>
                                    <option>Categoria a</option>
                                    <option>Categoria b</option>
                                    <option>Categoria c</option>
                                    <option>Categoria d</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 hidden-md text-right">
                    <div class="form-group">
                        <label for="btnAction">&nbsp;</label>
                        <div id="btnAction">
                            <button id="btnSearch" type="button"  class="btn btn-primary"><i class="fa fa-search "></i> Buscar</button>
                            <button id="btnReset" type="button" class="btn btn-primary">Limpiar Filtros</button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 visible-md  text-left">
                    <div class="form-group">
                        <label for="btnAction">&nbsp;</label>
                        <div id="btnAction">
                            <button id="btnSearch" type="button" class="btn btn-primary"><i class="fa fa-search "></i> Buscar</button>
                            <button id="btnReset" type="button"  class="btn btn-primary">Limpiar Filtros</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">Datos del Modulo</div>
        <div class="panel-body dataContainer">
            <div class="moduloCursoSubContainer" id="moduloCursoSubContainer">

                @Html.Partial("ModuloCursoListPartialView")
                
            </div>
        </div>

        <div class="panel-footer">Agregar paginacion</div>

    </div>

</div>

<script src="@Url.Content("/Scripts/Siga/ModuloCurso/modulocurso.js")" type="text/javascript"></script>
<script src="@Url.Content("/Scripts/Siga/ModuloCurso/modulocursoDTO.js")" type="text/javascript"></script>

