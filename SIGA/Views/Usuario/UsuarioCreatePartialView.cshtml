                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row paddingBottom5px">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.UsuarioItem.AlumnoItem.Alu_FechaIngreso, "Fecha Ingreso", htmlAttributes: new { @class = "control-label col-md-3 text-right" })
                                                        <div class="col-md-9">
                                                            @Html.EditorFor(model => model.UsuarioItem.AlumnoItem.Alu_FechaIngreso, new { htmlAttributes = new { @class = "form-control", data_bind = "value: usuario.usuarioItem.alumnoItem.alu_fechaingreso" } })
